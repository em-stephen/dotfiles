# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#859900"
        color_bad = "#dc322f"
        color_degraded = "#b58900"
        color_separator = "#839496"
        interval = 1
}

order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "%essid (%bitrate)"
        format_down = "disconnected"
}

battery all {
        format = "%percentage%status (%remaining remaining)"
        status_chr = "+"
        status_bat = "-"
        status_unk = "?"
        status_full = ""
        low_threshold = 10
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "%used"
}

tztime local {
        format = "%H:%M:%S "
}

volume master {
        format = "%volume"
        format_muted = "muted (%volume)"
        device = "pulse"
        mixer = "Master"
        mixer_idx = 0
}
